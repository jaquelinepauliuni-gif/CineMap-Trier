---
import Layout from "../../Layouts/layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import Filmstrip from "../../Layouts/components/Filmstrip.astro";

const kinobetreiber: CollectionEntry<"kinobetreiber">[] =
  await getCollection("kinobetreiber");

// Alphabetisch sortieren
kinobetreiber.sort((a, b) =>
  (a.data.name ?? "").localeCompare(b.data.name ?? "")
);
---

<Layout>
  <h1 class="text-5xl font-bold mb-6">Kinobetreiber</h1>

  <section>
    <div class="px-4 mx-auto max-w-7xl">
      <div class="grid gap-8 md:grid-cols-3">
        {kinobetreiber.map((betreiber) => (
          <Filmstrip
  href={`/kinobetreiber/${betreiber.id.replace(/\.(md|mdx)$/, "")}/`}
  title={betreiber.data.name}
  image={betreiber.data.images?.[0]?.src ?? "/images/dunkel.png"}
/>


        ))}
      </div>
    </div>
  </section>
</Layout>
